<h1>Login</h1>
<%= form_for @user_session, :as => :user_session, :url =>{:action => "create"} do |f| %>

  <%= errors_for(@user_session, "Opps, unable to add new user").html_safe %>
       
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
 <%= f.submit "Login" %>
<% end %>
<br/>
Not a user? <%= link_to "Register", new_user_path %>
